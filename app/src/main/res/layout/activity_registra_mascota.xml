<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.RegistraMascotaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <fragment
            android:id="@+id/frmMenu"
            android:name="com.example.lazospetshop.fragmentos.MenuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_menu"></fragment>


        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="@string/TitulotxtMascota"
            android:textSize="30sp"></TextView>

        <ImageView
            android:id="@+id/imagenView"
            android:layout_width="234dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="90dp"
            android:src="@drawable/foto" />

        <Button
            android:id="@+id/BtnSubirImagenMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130dp"
            android:layout_marginVertical="5dp"
            android:text="@string/BtnSubirImagen"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Nombre Mascota"
            android:textSize="15sp">
        </TextView>

        <EditText
            android:id="@+id/txtNombreMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginBottom="15dp"
            android:hint="Ingrese Nombre Mascota"></EditText>

        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Tipo de Raza"
            android:textSize="15sp">
        </TextView>

        <Spinner
            android:id="@+id/spiTipoRaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"></Spinner>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Sexo"
            android:textSize="15sp"></TextView>

        <RadioGroup
            android:id="@+id/rbgSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_masculino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/rbMacho" />

            <RadioButton
                android:id="@+id/radio_femenino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rbHembra" />
        </RadioGroup>

        <Button
            android:id="@+id/rgBtnMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="5dp"
            android:text="@string/btnRgMascota"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>