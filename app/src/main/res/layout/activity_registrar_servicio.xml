<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.RegistrarServicioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">
        <fragment
            android:id="@+id/frmMenu"
            android:name="com.example.lazospetshop.fragmentos.MenuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_menu"></fragment>


        <TextView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Servicio"
            android:textSize="30sp"></TextView>

        <ImageView
            android:layout_width="234dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="90dp"
            android:src="@drawable/foto" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Mascota"
            android:textSize="15sp"></TextView>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="0dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="170dp"
            android:background="@drawable/spinner_bg"
            android:minHeight="4dp"></Spinner>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Fecha de Baño"
            android:textSize="18sp"></TextView>

        <DatePicker
            android:layout_width="277dp"
            android:layout_height="170dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"></DatePicker>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Seleccione el Tipo de Servicio"
            android:textSize="15sp"></TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbBano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="Baño" />

            <RadioButton
                android:id="@+id/rbCorte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Corte" />

            <RadioButton
                android:id="@+id/rbAmbos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ambos" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="240dp"
            android:gravity="start"
            android:text="Numero de Contacto"
            android:textSize="15sp"></TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginBottom="15dp"
            android:hint="Ingrese Numero"></EditText>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:text="Agregar Servicio"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>