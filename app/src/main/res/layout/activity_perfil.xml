<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.PerfilActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <fragment
            android:id="@+id/frmMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.lazospetshop.fragmentos.MenuFragment"
            tools:layout="@layout/fragment_menu">
        </fragment>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/persona">
            </ImageView>

            <TextView
                android:id="@+id/perLblSaludo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/perLblSaludo"
                android:textSize="17sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="215dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/registra">
                </ImageView>
                <Button
                    android:id="@+id/perRegistrarMascota"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="Regsitra tu mascota"
                    android:textAllCaps="false">
                </Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="215dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/nuestros"></ImageView>

                <Button
                    android:id="@+id/perNuestrosProductos"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="Nuestros productos"
                    android:textAllCaps="false">
                </Button>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/solicita">
            </ImageView>

            <Button
                android:id="@+id/perSolicitaServicios"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:text="Solicita tus servicios"
                android:textAllCaps="false">
            </Button>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>